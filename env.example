# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=yourpassword
DB_NAME=planorra
DATABASE_URL=postgres://postgres:yourpassword@localhost:5432/planorra
DATABASE_SSL_DIR=  # optional CA bundle path for production SSL
TYPEORM_SYNCHRONIZE=false
